# Exclude everything by default
/*

# Include Laravel essential directories
!/app/
!/bootstrap/
!/config/
!/database/
!/routes/
!/resources/
!/storage/
!/tests/
!/public/build/
!/.env.example
!/.gitattributes
!/artisan
!/composer.json
!/composer.lock
!/package.json
!/package-lock.json
!/phpunit.xml
!/vite.config.js

# Keep this file
!.gitignore

# Exclude vendor and node_modules
/vendor/
/node_modules/

# Exclude public directory except build
/public/*
!/public/build/

# Exclude bootstrap cache contents
/bootstrap/cache/*
!/bootstrap/cache/.gitignore

# Exclude storage generated files but keep structure
/storage/app/*
!/storage/app/.gitignore
!/storage/app/public/
/storage/app/public/*
!/storage/app/public/.gitignore

/storage/framework/cache/*
!/storage/framework/cache/.gitignore
!/storage/framework/cache/data/
/storage/framework/cache/data/*
!/storage/framework/cache/data/.gitignore

/storage/framework/sessions/*
!/storage/framework/sessions/.gitignore

/storage/framework/testing/*
!/storage/framework/testing/.gitignore

/storage/framework/views/*
!/storage/framework/views/.gitignore

/storage/logs/*
!/storage/logs/.gitignore

/storage/debugbar/*

# Exclude sensitive files
.env
.env.*
!.env.example

# Common excludes
*.log
*.key
.DS_Store
Thumbs.db